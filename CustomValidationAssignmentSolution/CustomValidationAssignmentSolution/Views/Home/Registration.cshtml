@model CustomValidationAssignmentSolution.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="container">
        <h2>Registration</h2>

    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(temp => temp.Name)
                @Html.TextBoxFor(temp => temp.Name, new { placeholder = "Name", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Name)
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(temp => temp.Email)
                @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Email)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Mobile)
                @Html.TextBoxFor(temp => temp.Mobile, new { placeholder = "Mobile", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Mobile)
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Photography)
                @Html.CheckBoxFor(temp => temp.Photography, new { placeholder = "Photography" })
                @Html.ValidationMessageFor(temp => temp.Photography)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Gardening)
                @Html.CheckBoxFor(temp => temp.Gardening, new { placeholder = "Gardening" })
                @Html.ValidationMessageFor(temp => temp.Gardening)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Dance)
                @Html.CheckBoxFor(temp => temp.Dance, new { placeholder = "Dance" })
                @Html.ValidationMessageFor(temp => temp.Dance)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Hiking)
                @Html.CheckBoxFor(temp => temp.Hiking, new { placeholder = "Hiking" })
                @Html.ValidationMessageFor(temp => temp.Hiking)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(temp => temp.Painting)
                @Html.CheckBoxFor(temp => temp.Painting, new { placeholder = "Painting" })
                @Html.ValidationMessageFor(temp => temp.Painting)
            </div>
        </div>

        @Html.ValidationSummary()
        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-danger" href="/products/index">Cancel</a>
    }
    </div>
    
</body>
</html>
