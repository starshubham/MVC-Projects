@model Reporting_Assistant_New.ViewModel.Registration
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPageGeneral.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-row">

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)

        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>


        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.DateOfBirth)
            @Html.TextBoxFor(m => m.DateOfBirth, new { placeholder = "Please type Date Of Birth In a form of dd/mm/yyyy", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DateOfBirth)
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Mobile)
            @Html.TextBoxFor(m => m.Mobile, new { placeholder = "Enter Mobile Number", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Mobile)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { placeholder = "Enter Full Address", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.City)
            @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.City)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Country)
            @Html.TextBoxFor(m => m.Country, new { placeholder = "Country", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Country)
        </div>

        <button type="submit" class="btn btn-success">Submit</button>

        @Html.ValidationSummary()
    </div>
}



